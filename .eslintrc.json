{
    "env": {
        "browser": true,
        "es2021": true,
        "commonjs": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": ".js",
          "moduleDirectory": ["node_modules"]
        }
      }
    },
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ]
    }
}
